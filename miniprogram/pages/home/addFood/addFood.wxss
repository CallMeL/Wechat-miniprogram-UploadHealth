@import "../../../models/wxSearch/wxSearch.wxss";
.wxSearch-section{
margin-top: 10%;
}
.container{
  position: relative;
}
.stv-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}
.withAnimate {
  transition: all 100ms ease;
  -webkit-transform: translate3d(0, 0, 0);
  -moz-transform: translate3d(0, 0, 0);
  -ms-transform: translate3d(0, 0, 0);
  transform: translate3d(0, 0, 0);
  -webkit-backface-visibility: hidden;
  -moz-backface-visibility: hidden;
  -ms-backface-visibility: hidden;
  backface-visibility: hidden;
  -webkit-perspective: 1000;
  -moz-perspective: 1000;
  -ms-perspective: 1000;
  perspective: 1000;
}
.stv-container .tab-bar {
  height: 5%;
  position: relative;
  display: flex;
  font-size: 30rpx;
  color: white;
}
.stv-container .tab-bar .tab-active {
  color: white;
}
.stv-container .tab-bar .tab {
  display: flex;
  align-items: center;
  justify-content: center;
  padding-bottom: 20rpx;
  background-color: rgb(140, 180, 255);
}
.stv-container .tab-bar .under-line {
  position: absolute;
  bottom: 0;
  height: 6rpx;
  background-color: white;
  box-shadow: 5rpx 10rpx 10rpx 10rpx rgba(31, 65, 102, 0.1);
}
