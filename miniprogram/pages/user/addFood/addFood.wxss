.container {
  position: fixed;
  width: 90%;
  margin-left: 5%;
  margin-right: 5%;
}
.foodName {
  color: #333;
  font-weight: bold;
  font-size: 40rpx;
  margin-bottom: 5%;
}
.input-line{
  display:flex;
  justify-content:space-around;
  align-items: left;
  margin-bottom: 36rpx;
}
.Detail-Container{
  display: flex;
  justify-content:space-around;
  margin-top: 5%;
  font-size: 32rpx;
  padding-top: 2%;
  padding-bottom: 2%;
  align-items: center;
  border-left: 6px solid #1565c0;
  text-align: left;
}
input[type=text] {
  background-color: #3CBC8D;
  color: white;
  margin-left: 20%;
  margin-right: 20%;
}
.Detail-name {
  position: absolute;
  left:5%;
  width: 15%;
  font-size: 32rpx;
}
.Detail-unit{
  position: absolute;
  right:5%;
  width: 10%;
  font-size: 32rpx;
}

 .button-group {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  margin-top: 56rpx;
  font-weight: bold;
  font-size: 28rpx;
}

.button-group .cancel {
  color: #666;
}

.button-group .confirm {
  margin-left: 36rpx;
  padding: 8rpx 20rpx;
  border-radius: 12rpx;
  background-color: #1565c0;
  color: white;
}
